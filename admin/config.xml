<?xml version="1.0"?>
<config>
    <fieldset name="basic" label="COM_CONFIG_COMPONENT_FIELDSET_LABEL">
        <field
                name="enable_type"
                type="list"
                label="COM_ARGENSYML_ENABLE_TYPE"
                description="COM_ARGENSYML_ENABLE_TYPE_DESC"
                default="y"
        >
            <option value="y">Yandex</option>
        </field>
        <field
            name="limit"
            type="text"
            default="200"
            required="true"
            label="COM_ARGENSYML_LIMIT"
            description="COM_ARGENSYML_LIMIT_DESC"
            filter="integer"
                />
        <field
            name="time"
            type="text"
            default="60"
            required="true"
            label="COM_ARGENSYML_TIME"
            description="COM_ARGENSYML_TIME_DESC"
            filter="integer"
                />
        <field
            name="connector"
            type="fileList"
            default=""
            hide_none="true"
            hide_default="true"
            stripext="true"
            exclude="mainconnector"
            filter=".php"
            directory="administrator/components/com_argensyml/connectors"
            label="COM_ARGENSYML_SHOP_SCROPT"
            description="COM_ARGENSYML_SHOP_SCROPT_DESC"
                />
        <field
            name="password"
            type="text"
            default="asdakhecrnkjhsdfnhk"
            label="COM_ARGENSYML_PASS"
            description="COM_ARGENSYML_PASS_DESC"
                />
    </fieldset>

    <fieldset
            name="permissions"
            label="JCONFIG_PERMISSIONS_LABEL"
            description="JCONFIG_PERMISSIONS_DESC"
            >
        <field
                name="rules"
                type="rules"
                label="JCONFIG_PERMISSIONS_LABEL"
                class="inputbox"
                validate="rules"
                filter="rules"
                component="com_argensyml"
                section="component"/>
    </fieldset>
</config>